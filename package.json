		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.1.8",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.1.8",
		"typescript": "^5.0.0",
		"vite": "^6.2.6",
		"wrangler": "^4.19.1"
	},
	"dependencies": {
		"daisyui": "^5.0.43"
